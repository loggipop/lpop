{
  "name": "@lpop/keychain-native",
  "version": "0.1.0",
  "description": "Native keychain bindings for lpop with enhanced macOS security features",
  "main": "index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "version": "napi version",
    "test": "bun test",
    "test:rust": "cargo test --lib -- --nocapture && cargo test --tests -- --nocapture",
    "test:all": "bun run test:rust && bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "cargo tarpaulin --out Html --output-dir coverage",
    "lint": "cargo fmt -- --check && cargo clippy -- -D warnings",
    "clean": "rm -rf target *.node"
  },
  "napi": {
    "name": "keychain-native",
    "triples": {
      "defaults": true
    }
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ]
}